generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  username  String
  email     String      @unique
  password  String
  userType  UserType
  Donor     Donor?
  Collector Collector?
}

model Donor {
  id                  Int    @id @default(autoincrement())
  additionalInfoDonor String
  user                User   @relation(fields: [userId], references: [id])
  userId              Int   @unique
}

model Collector {
  id                      Int    @id @default(autoincrement())
  additionalInfoCollector String
  user                    User   @relation(fields: [userId], references: [id])
  userId                  Int @unique
}

enum UserType {
  DOADOR
  COLETOR
}
