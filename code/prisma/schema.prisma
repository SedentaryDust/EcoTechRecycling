generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:1@34@localhost:3306/project_node"
}

model Evento {
    id                Int         @id @default(autoincrement())
    titulo            String       
    DataHora_Inicio   DateTime    @default(now())
    DataHora_Fim      DateTime    @default(now())
    descricao         String
    endereco          Endereco?
}
model Endereco {

    eventoId      Int         @unique 
    evento        Evento      @relation (fields:[eventoId], references:[id])
    estado        String 
    cidade        String
    bairro        String
    Logradouro    String 
    cep           String          
    id            Int         @id
    
}
